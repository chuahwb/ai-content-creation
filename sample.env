# Environment Configuration
ENV=development  # or production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
PYTHONPATH=/app

# Database Configuration
DATABASE_URL=sqlite:///./data/churns.db
REDIS_URL=redis://redis:6379/0

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Frontend Configuration (for development)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
INTERNAL_API_URL=http://api:8000

# For production with reverse proxy
# NEXT_PUBLIC_API_URL=https://your-domain.com
# NEXT_PUBLIC_WS_URL=wss://your-domain.com

# For development with ngrok (optional)
# NEXT_PUBLIC_API_URL=https://your-ngrok-url.ngrok-free.app
# NEXT_PUBLIC_WS_URL=wss://your-ngrok-url.ngrok-free.app

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
SECRET_KEY=your_secret_key_here_minimum_32_chars
JWT_SECRET=your_jwt_secret_here_minimum_32_chars
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Image Processing Configuration
MAX_IMAGE_WIDTH=2048
MAX_IMAGE_HEIGHT=2048
IMAGE_QUALITY=85

# Background Task Configuration
TASK_TIMEOUT=300  # 5 minutes
MAX_CONCURRENT_TASKS=3

# Feature Flags
ENABLE_CAPTION_ENHANCEMENT=true
ENABLE_IMAGE_ASSESSMENT=true
ENABLE_REFINEMENT=true 